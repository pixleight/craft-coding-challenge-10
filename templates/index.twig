{% extends '_layout.twig' %}

{% set competitors = craft.entries
    .section('competitors')
    .with([
        'image',
        'country.flag',
    ])
    .orderBy('score asc')
    .collect()
%}

{% set countries = competitors.pluck('country').collapse().unique('id') %}

{% set topCompetitors = competitors|slice(0, 5) %}
{% set topCountries = countries|slice(0, 3) %}
